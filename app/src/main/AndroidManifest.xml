<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.rideshareapp1" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".signUp"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name=".dashboard"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name=".share_ride_post"
            android:label="@string/title_activity_share_ride_post" >
        </activity>
        <activity
            android:name=".driver_post_ride"
            android:label="@string/title_activity_driver_post_ride" >
        </activity>
        <activity
            android:name=".my_rides"
            android:label="@string/title_activity_my_rides" >
        </activity>
        <activity
            android:name=".search_form"
            android:label="@string/title_activity_search_form" >
        </activity>
        <activity
            android:name=".search_results"
            android:label="@string/title_activity_search_results" >
        </activity>
        <activity
            android:name=".ride_details"
            android:label="@string/title_activity_ride_details" >
        </activity>
    </application>

</manifest>
